<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.VenueEase" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.VenueEase.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CityTagButton" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:background">@drawable/city_tag_background</item>
        <item name="android:textColor">@color/city_tag_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BookNowButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AmenityTag" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/amenity_tag_background</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="FilterItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="FilterItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="AmenityCheckedItem" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="ImageNavButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#80000000</item>
        <item name="android:src">@drawable/ic_arrow_forward</item> <item name="android:padding">8dp</item>
        <item name="android:contentDescription">Navigation</item>
    </style>

    <style name="ImageNavButtonLeft" parent="ImageNavButton">
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:rotation">180</item>
    </style>

    <style name="ImageNavButtonRight" parent="ImageNavButton">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ImageDotIndicator">
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_height">6dp</item>
        <item name="android:background">@drawable/dot_indicator_inactive</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="ImageDotIndicatorActive" parent="ImageDotIndicator">
        <item name="android:background">@drawable/dot_indicator_active</item>
    </style>

    <style name="FormInputField" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/form_field_background</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#888888</item>
    </style>

</resources>