<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_notification_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_notif_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            tools:src="@drawable/ic_bell"
            tools:tint="@color/design_default_color_primary"/> <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <TextView
                android:id="@+id/tv_notif_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ll_notif_actions"
                tools:text="New Booking Request ðŸŽ‰"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <LinearLayout
                android:id="@+id/ll_notif_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_mark_read_unread"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    tools:src="@drawable/ic_check"
                    android:contentDescription="Mark as read/unread"/>
                <ImageView
                    android:id="@+id/iv_delete_notif"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_delete"
                    app:tint="@android:color/holo_red_dark"
                    android:contentDescription="Delete notification"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_notif_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            tools:text="Jane Smith has requested to book Grand Conference Hall for Corporate Meeting on 2025-10-30 from 08:30 to 11:30. Total amount: â‚¹450. Please review and approve/reject this request."/>

        <LinearLayout
            android:id="@+id/ll_notif_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/tag_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView android:id="@+id/tv_notif_detail_1" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="2025-10-30" android:drawableStart="@drawable/ic_calendar" android:drawablePadding="6dp"/>
            <TextView android:id="@+id/tv_notif_detail_2" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="Jane Smith" android:drawableStart="@drawable/ic_profile" android:drawablePadding="6dp"/>
            <TextView android:id="@+id/tv_notif_detail_3" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="Grand Conference Hall" android:drawableStart="@drawable/ic_venue" android:drawablePadding="6dp"/>
            <TextView android:id="@+id/tv_notif_detail_4" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="450" android:drawableStart="@drawable/ic_price" android:drawablePadding="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_notif_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1h ago"
            android:textSize="12sp"/>
    </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>