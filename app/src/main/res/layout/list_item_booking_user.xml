<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_user_booking_venue_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ll_status_badge"
                tools:text="Riverside Banquet"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tv_user_booking_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_booking_venue_name"
                tools:text="Booking #2"
                android:textSize="12sp"/>

            <LinearLayout
                android:id="@+id/ll_status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                tools:background="@drawable/tag_background_pending"> <ImageView
                android:id="@+id/iv_status_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                tools:src="@drawable/ic_pending"
                tools:tint="@color/text_color_pending"/> <TextView
                android:id="@+id/tv_user_booking_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Pending Review"
                tools:textColor="@color/text_color_pending"/> </LinearLayout>
        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:useDefaultMargins="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_user_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="2024-12-20"/>
            <TextView
                android:id="@+id/tv_user_booking_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_time"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="18:00 - 23:00"/>
            <TextView
                android:id="@+id/tv_user_booking_event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_event_type"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="Wedding Reception"/>
            <TextView
                android:id="@+id/tv_user_booking_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_price"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                tools:text="₹1000"/>
        </GridLayout>

        <LinearLayout
            android:id="@+id/ll_user_special_requests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/tag_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Special Requests:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_user_special_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Floral decoration required"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_status_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_tint_background"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_action_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/text_color_approved"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/iv_action_icon"
                android:layout_toStartOf="@+id/btn_pay_now"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/tv_action_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Your booking has been approved!"
                    android:textStyle="bold"
                    android:textColor="@color/text_color_approved"/>
                <TextView
                    android:id="@+id/tv_action_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Complete payment to confirm your booking"
                    android:textSize="12sp"
                    android:textColor="@color/text_color_approved"/>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_pay_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="Pay Now"
                app:icon="@drawable/ic_payment"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/text_color_approved"
                android:visibility="gone"
                tools:visibility="visible"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_footer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            tools:text="Submitted on 2/12/2024 • Waiting for admin approval"
            android:textSize="12sp"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>