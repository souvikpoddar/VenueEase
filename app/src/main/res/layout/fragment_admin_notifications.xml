<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".AdminNotificationsFragment">

    <!-- Admin Header Section -->
    <LinearLayout
        android:id="@+id/header_layout_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:textColor="#1C1C1E"
            android:textSize="28sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Stay updated with booking requests and system activities"
            android:textColor="#8A8A8E"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Admin "No Notifications" Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="Notification bell icon"
            android:src="@drawable/ic_notifications_bell"
            app:tint="#AEAEB2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="No Notifications"
            android:textColor="#1C1C1E"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Admin notifications will appear here when users take actions."
            android:textColor="#8A8A8E"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>